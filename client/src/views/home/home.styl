.home-main-container
	height 100vh
	border 2px solid #ccc
	display inline-block

.home-main-left-menu
	display inline-block
	height 100vh

.home-main-left-menu-header-body
	width 100%
	height 89%
	text-align left
	padding-top 25px
	padding-left 25px
	cursor pointer
	i
		color light-grey
		margin 5px
		position: relative
		left: 50%
		transform: translate(-50%, -50%)
		display block
		span
			margin-left 10px
			font-size 20px
			color light-grey


.home-main-left-menu-header-row
	margin-top 15px !important

.conversion-home-header, .home-main-left-menu-header
	width 100%
	height 11%

.conversion-home-header-left
	height 100%
	text-align center
	padding 5px

.conversion-home-header-right
	height 100%
	line-height 100%
	text-align center

.conversion-home-content-title
	width 100%
	height 7%
	padding-left 10px
	padding-right 10px

.conversion-home-content-list
	width 100%
	height 82%
	padding-left 10px
	padding-right 10px
	overflow-y: scroll
	overflow-x: hidden

.conversion-home-header-title
	margin 0px !important

.home-menu-left
	height 100%
	border 2px solid #eee
	p
		left 15% !important

.home-menu-right
	height 100%
	border 2px solid #eee

.home-menu-center
	height 100%
	border 2px solid #eee
	padding-left 0px !important
	padding-right 0px !important

.home-xs-menu
	height 100%
	p
		text-align: -webkit-center

.display-conversion-row
	height 65px
	.col-sm-4, .col-sm-6, .col-sm-2
		height 100%
	.col-sm-6
		.col-xs-6, .col-xs-3
			height 100%

.home-conversion-display-date
	p
		font-size: 12px
		overflow: hidden

.home-disable-download-btn
	opacity 0.5 !important
	cursor none !important

.alert-home-placeholder
	position: absolute
	width: 250px
	right: 0px
	top: 25px

.home-file-list-icon
	position: absolute
	top: 50%
	transform: translate(-50%, -50%)
	margin-left 20px

.select-left-row
	font-weight bold !important
